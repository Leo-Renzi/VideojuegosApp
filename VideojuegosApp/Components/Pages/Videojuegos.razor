@page "/videojuegos"
@inject VideojuegosApp.Services.VideojuegoService videojuegoService
@inject VideojuegosApp.Services.SessionService Session
@inject NavigationManager Nav
@inject IJSRuntime JS

@if (!Session.IsLoggedIn)
{
    <div class="container text-center mt-5">
        <div class="alert alert-warning">No has iniciado sesión.</div>
        <a class="btn btn-primary" href="/">Ir al login</a>
    </div>
}
else
{
    <div class="container my-5">
        <div class="card shadow-lg p-4 mx-auto" style="max-width: 1100px;">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                <div>
                    <h2 class="mb-0"><i class="bi bi-controller"></i> Videojuegos</h2>
                    <small class="text-muted">Listado de títulos disponibles.</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-success" disabled>
                        <i class="bi bi-plus-circle"></i> Añadir Videojuego
                    </button>
                    <button class="btn btn-outline-secondary" @onclick='() => Nav.NavigateTo("/menuprincipal")'>
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                </div>
            </div>

            <hr class="my-3" />

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var juego in videojuegoService.GetVideojuegos())
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@juego.Imagen" class="card-img-top" alt="@juego.Titulo"
                                 style="object-fit:cover; height:330px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@juego.Titulo</h5>
                                <p class="card-text text-muted mb-4">
                                    <b>Género:</b> @juego.Genero <br />
                                    <b>Consola:</b> @juego.Consola <br />
                                    <b>Precio:</b> $@juego.Precio
                                </p>
                                <div class="mt-auto">
                                    <button class="btn btn-danger btn-sm"
                                            @onclick="() => ConfirmDelete(juego.Id, juego.Titulo)">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="deleteGameModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Eliminar Videojuego</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    ¿Seguro que deseas eliminar <b>@juegoSeleccionadoNombre</b>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteVideojuego">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private int juegoSeleccionadoId;
    private string juegoSeleccionadoNombre = string.Empty;

    private void ConfirmDelete(int id, string titulo)
    {
        juegoSeleccionadoId = id;
        juegoSeleccionadoNombre = titulo;
        JS.InvokeVoidAsync("bootstrapModalShow", "#deleteGameModal");
    }

    private void DeleteVideojuego()
    {
        videojuegoService.Delete(juegoSeleccionadoId);
        JS.InvokeVoidAsync("bootstrapModalHide", "#deleteGameModal");
        StateHasChanged();
    }
}
